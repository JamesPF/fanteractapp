<div class="main-content">
  <div class="top-left">
    <%= image_tag @user.avatar.url(:large), class: "profile-image" %>
  </div>
  <div class="top-right">
    <h1><%= @user.artist_name %></h1>
    <h2><%= @user.genre %></h2>
    <p><%= @user.bio %></p>
  </div>
  <hr>
  <h1>Available Experiences</h1>
  <% @user.experiences.each do |e| %>
  <div class="result">
    <h2><%= e.title %></h2>
      <%= image_tag @user.avatar.url(:thumb), class: "result-thumb" %>
    <h3><%= @user.artist_name %></h3>
    <p><%= e.description %></p>
    <%= button_to "Check it Out!", experience_path(e), :method => :get %>
  </div>
  <% end %>
</div>