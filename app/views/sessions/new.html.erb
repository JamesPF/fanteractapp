<div class="main-content">
  <div class="login-info">
    <div class="login">
      <h1>Please Log In</h1>
        <%= form_tag sessions_path do %>
        <%= label_tag("Email") %><br>
        <%= text_field_tag :email %><br>
        <%= label_tag("Password") %><br>
        <%= password_field_tag :password %><br>
        <%= submit_tag "Log In", class: "login-button" %>
      <% end %>
    </div>
  </div>
</div>